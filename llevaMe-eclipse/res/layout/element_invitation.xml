<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.edu.eafit.llevame.view.ListEvents" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/msj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/aceptar"
            android:text="#Usuario te ha agregado como amigo"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/rechazar"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/aceptar"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/aceptar"
            android:layout_marginRight="5dp"
            android:onClick="onRechazar"
            android:text="Rechazar" />

        <Button
            android:id="@+id/aceptar"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/msj"
            android:layout_alignTop="@+id/msj"
            android:layout_toLeftOf="@+id/rechazar"
            android:onClick="onAceptar"
            android:text="Aceptar" />

    </RelativeLayout>

</LinearLayout>
