<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.eafit.llevame.view.Amigos" >

    <Button
        android:id="@+id/btnComunidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAmigos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:onClick="onComunidades"
        android:text="Comunidades"
        android:textColor="#777777"
        android:textSize="35sp"
        android:background="@drawable/btn_comunidades" />

    <ImageButton
        android:id="@+id/searchUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnAmigos"
        android:layout_marginTop="33dp"
        android:onClick="onBuscar"
        android:src="@drawable/ic_action_add_person" />

    <Button
        android:id="@+id/btnAmigos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnComunidades"
        android:layout_below="@+id/searchUsuario"
        android:layout_marginTop="49dp"
        android:background="@drawable/btm_amigos"
        android:onClick="onAmigos"
        android:text="Amigos"
        android:textColor="#777777"
        android:textSize="35sp" />

</RelativeLayout>
