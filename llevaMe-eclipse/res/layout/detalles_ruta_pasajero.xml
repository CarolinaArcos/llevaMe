<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.eafit.llevame.view.DetallesRutaPasajero" >
    
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:id="@+id/general_linear_layout_pasajero">

        <FrameLayout
				android:layout_width="match_parent"
        		android:layout_height="250dp">
        		
            <ImageButton 
                android:id="@+id/imagePasajero"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/maps"/>

    	</FrameLayout>    
    
         <TextView
            android:id="@+id/lblConductorPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Conductor" />
         
        <EditText
            android:id="@+id/conductorPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="13" />
        
        <TextView
            android:id="@+id/lblNombrePasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Ruta" />
        
         <EditText
            android:id="@+id/nombrePasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="13" />

    <LinearLayout
        android:id="@+id/horaYFehaRowPasajero"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
     	>
        
        <TextView
            android:id="@+id/lblHoraPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora" />
        
         <EditText
            android:id="@+id/horaPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="5" />
        
         <TextView
            android:id="@+id/lblFechaPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha" />
         
		<EditText
            android:id="@+id/fechaPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="11" />

    </LinearLayout>
    
	<LinearLayout
	    android:id="@+id/cupoYPlacaRowPasajero"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
	    >
		<TextView
            android:id="@+id/lblCupoPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cupo" />

        <EditText
            android:id="@+id/cupoPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="5" />
        
        <TextView
            android:id="@+id/lblPlacaPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placa" />
	    
		<EditText
            android:id="@+id/placaPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="11" />
		
	</LinearLayout>
	
		
	    <TextView
            android:id="@+id/lblDescripcionPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion" />
	    
	     <EditText
            android:id="@+id/descripcionPasajero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="15" />
	     
	     <Button 
	         android:id="@+id/dejarRutaPasajero"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center_horizontal"
            android:onClick="onDejarRuta"
	         android:text="Dejar Ruta"/>


	</LinearLayout>
</ScrollView>

